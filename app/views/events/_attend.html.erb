<% if @event.attendees.include?(current_user) %>
    <%= simple_form_for(current_user.attendances.find_by(attended_event_id: @event.id),
                      method: :delete) do |f| %>
      <%= f.submit "Un-attend", class: 'btn btn-large btn-danger' %>
    <% end %>

<% else %>
  <%= simple_form_for(current_user.attendances.build) do |f| %>
    <%= f.hidden_field :attended_event_id, :value => @event.id %>
    <%= f.submit "Attend", class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>
