<script type="text/javascript">
    $('.datetimepicker').datetimepicker();
</script>

<%= simple_form_for @event do |e| %>
  <%= e.input :name, required: false, autofocus: true  %>
  <%= e.input :description, required: false %>
  <%= e.input :date, as: :datetime_picker, required: false %>
  <%= e.submit class: 'btn btn-primary' %>
<% end %>
