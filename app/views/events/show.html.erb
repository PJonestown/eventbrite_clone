<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-sm-offset-2 col-sm-8'>
      <%= render 'attend' if current_user %>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title"><%= @event.title %></h3>
          </div>
          <div class="panel-body well">
            <%= @event.description %>
          </div>
          <small><%= @event.date %></small>
          <small><%= link_to @event.creator.username, @event.creator %></small>
          <% if signed_in? && @event.creator_id == current_user.id %>
            <small><%= link_to 'Edit Event', edit_event_path(@event) %></small>
            <small><%= link_to 'Delete Event', event_path(@event), :method =>
            :delete, :confirm => 'Are you sure?'%></small>

          <% end %>
        </div>
        <h2>People attending</h2>
        <% @event.attendees.each do |a| %>
          <ul>
            <li><%= a.username %></li>
          </ul>
        <% end %>
    </div>
  </div>
</div>
