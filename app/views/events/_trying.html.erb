<% if current_user.attendances.include?(@event)#.attending?(@event) %>
    <%= simple_form_for(@current_user.attendances.find_by(attended_event_id: @event.id),
                      method: :delete) do |f| %>
      <%= f.submit "Un-attend", class: 'btn btn-large' %>
    <% end %>

<% else %>
  <%= simple_form_for(@attendance) do |f| %>
    <%= f.submit "Attend", class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>
