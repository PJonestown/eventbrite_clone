<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-sm-offset-4 col-sm-4'>
      <%= simple_form_for(:session, url: sign_in_path) do |f| %>
        <%= f.input :username, required: false, autofocus: true %>
        <%= f.submit 'Sign in', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
