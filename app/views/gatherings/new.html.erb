<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-sm-offset-4 col-sm-4'>
      <% if @group.restricted? && !privileged_member? %>
        <p>This gathering won't be public until a moderator approves it.</p>
      <% end %>
      <%= simple_form_for [@group, @gathering] do |g| %>
        <%= g.input :name, required: false, autofocus: true  %>
        <%= g.input :description, required: false %>
        <%= g.input :date, as: :date, required: false, start_year: Date.today.year %>
        <%= g.submit 'Create Gathering', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
