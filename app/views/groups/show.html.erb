<%= render 'join' if current_user %>
<% if current_user and current_user.id == @group.owner_id %>
  <%= link_to 'Create a Gathering', new_group_gathering_path(@group) %>
<% end %>
<%= @group.name %>
<% @gatherings.each do |g| %>
  <ul>
    <li><%= g.name %></li>
    <li><%= g.date %></li>
  </ul>
<% end %>

