<h1>Groups</h1>


  <h3>Search groups near you: </h3>
  <%= form_tag groups_path, method: :get do %>
    <div>
      <%= text_field_tag :search, params[:search],
      placeholder: 'All groups', type: :search, style: 'width: 150px' %>
      <label> from
        <% categories_array = Category.all.map { |c| [c.name, c.id] } %>
        <%= select_tag :category, options_for_select(categories_array), :include_blank => 'All categories' %>
      within
        <%= select_tag :radius, options_for_select([25, 50, 100]) %>
        miles of <%=@location ? @location.city : current_user.address.location%>
      </label>
    </div>
    <div><%= submit_tag 'Search' %></div>
  <% end %>


<% @groups.each do |g| %>
  <%= link_to g.name, group_path(g) %>
<% end %>

