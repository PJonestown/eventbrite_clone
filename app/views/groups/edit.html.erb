<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-sm-offset-4 col-sm-4'>
      <%= simple_form_for @group do |f| %>

        <%= f.input :name, required: false, autofocus: true %>
        <%= f.input :description, required: false %>
        <%= f.input :category_id,
          :collection => @categories,
          group_method: :name,
          prompt: 'Select a category',
          :required => false,
          label: false%>
        <%= f.input :is_private, label: 'Make group private', as: :radio_buttons %>
      <%= f.collection_radio_buttons :restriction_type,
          [[0, 'Allow any member to create a gathering'],
           [1, 'Allow moderators to create gatherings'],
           [2, 'Only you can create gatherings']], :first, :last, label: 'Hi' %>


        <%= f.submit 'Update Group', class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>
