<% if @group.restriction_type == 0 %>
  <% if current_user && @group.members.include?(current_user) %>
    <%= link_to 'New Gathering', new_group_gathering_path(@group) %>
  <% end %>

<% elsif @group.restriction_type == 1 %>
  <% if current_user %> 
    <% if @group.owner_id == current_user.id || @group.moderators.include?(current_user) %>
      <%= link_to 'New Gathering', new_group_gathering_path(@group) %>
    <% end %>
  <% end %>

<% else %>
  <% if current_user and current_user.id == @group.owner_id %>
    <%= link_to 'New Gathering', new_group_gathering_path(@group) %>
  <% end %>
<% end %>


