<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-sm-offset-4 col-sm-4'>
      <%= simple_form_for [@user, @moderation] do |f| %>
        <%= f.hidden_field :moderator_id, :value => @user.id %>
        <%= f.input :moderated_group_id, required: false, autofocus: true %>
        <%= f.submit 'Create a new moderator' %>
      <% end %>
    </div>
  </div>
</div>
