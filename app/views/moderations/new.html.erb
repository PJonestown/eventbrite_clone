<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-sm-offset-4 col-sm-4'>
      <h3><%= "Make #{@user.username} a moderator of group" %></h3>
      <%= simple_form_for [@user, @moderation] do |f| %>
        <%= f.hidden_field :moderator_id, :value => @user.id %>
        <%= f.input :moderated_group_id,
          :collection => @owned_groups,
          group_method: :name,
          prompt: 'Select one',
          :required => false,
          label: false%>

        <%= f.submit 'Create new moderator' %>
      <% end %>
    </div>
  </div>
</div>
